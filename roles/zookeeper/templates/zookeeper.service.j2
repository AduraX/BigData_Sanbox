[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory={{proj_dir}}/zookeeper
User={{zookeeper_user}}
Group={{zookeeper_group}}
ExecStart={{proj_dir}}/zookeeper/bin/zkServer.sh start {{proj_dir}}/zookeeper/conf/zoo.cfg
ExecStop={{proj_dir}}/zookeeper/bin/zkServer.sh stop {{proj_dir}}/zookeeper/conf/zoo.cfg
ExecReload={{proj_dir}}/zookeeper/bin/zkServer.sh restart {{proj_dir}}/zookeeper/conf/zoo.cfg
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=multi-user.target
